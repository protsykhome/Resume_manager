{% extends 'base.html.twig' %}

{% block title %}Resumes{% endblock %}

{% block body %}
    <h1>Resumes</h1>

    <ul>
        {% for resume in resumes %}
            <li>
                <ul>
                    <li>{{ resume.position }}</li> <!-- Відображення позиції -->
                    <li><a href="{{ path('resume_show', {'id': resume.id}) }}">Show</a></li>
                    <li><a href="{{ path('resume_edit', {'id': resume.id}) }}">Edit</a></li>
                    <li>
                        <form method="post" action="{{ path('resume_delete', {'id': resume.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ resume.id) }}">
                            <button type="submit">Delete</button>
                        </form>
                    </li>
                </ul>
            </li>
        {% endfor %}
    </ul>

    <a href="{{ path('resume_new') }}">Create new</a>
{% endblock %}
